<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.jay.shared_preference_toast_example.MainActivity">

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/text"
    android:text="Information"
    android:gravity="center"
    android:textSize="24sp"
    android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Name"
        android:id="@+id/nameInput"
        android:layout_below="@+id/text"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Age"
        android:id="@+id/ageInput"
        android:layout_below="@+id/nameInput"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Phone"
        android:id="@+id/phoneInput"
        android:layout_below="@+id/ageInput"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter City"
        android:id="@+id/cityInput"
        android:layout_below="@+id/phoneInput"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SAVE"
        android:width="100dp"
        android:layout_marginTop="5dp"
        android:id="@+id/saveButton"
        android:layout_below="@+id/cityInput"
        android:layout_centerHorizontal="true"
        android:textColor="#fff"
        android:background="@color/colorAccent"
        android:onClick="saveData" />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="SHOW"
        android:id="@+id/displayButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/saveButton"
        android:textColor="#fff"
        android:background="@color/colorAccent"
        android:onClick="getData" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/dataTextView"
        android:layout_below="@+id/displayButton"
        android:layout_marginTop="40dp" />

</RelativeLayout>
